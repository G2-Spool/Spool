# Copy this file to .env.local and update the values

# Backend API URL
# For local development, use the local backend URL
NEXT_PUBLIC_INTERVIEW_API_URL=http://localhost:8080

# For production, update to your AWS ALB URL after deploying the backend
# NEXT_PUBLIC_INTERVIEW_API_URL=https://your-alb-url.amazonaws.com

# Optional: Analytics (if you add them later)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id

# RAG System Configuration
# Pinecone Configuration
PINECONE_API_KEY=your-api-key
# PINECONE_ENVIRONMENT=not_needed_for_serverless  # Optional - not used in serverless setup
PINECONE_INDEX_NAME=spool-textbook-embeddings

# OpenAI Pinecone Configuration
PINECONE_OPENAI_API_KEY=your-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=300
MAX_CONCURRENT_REQUESTS=5
